<% if @user %>
	<%= form_for @user do |u| %>
			<%= u.label "username", "username:" %>
			<%= u.text_field :username , value: @user.username%>
			<%= u.label :email, "email:" %>
			<%= u.text_field :email , value: @user.email %>
			<%= u.label :password, "password:" %>
			<%= u.text_field :password, value: @user.password %>
			<%= u.submit "Submit!" %>
	<% end %>
<% else %>
	<h1> No such person! </h1>
<% end %>
